---
import ToolLayout from '@layouts/ToolLayout.astro';
import MarkdownEditor from '@components/doc/MarkdownEditor';
import type { Locale } from '../../i18n/locales';
import { t } from '../../i18n/utils';

const lang: Locale = 'en';
const tr = t(lang);
const toolTr = tr.tools.mdEditor;
const title = `${toolTr.name} - ${tr.site.name}`;
const description = toolTr.description;
const uiStrings = { common: tr.common, mdEditor: tr.mdEditor };
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebApplication',
  name: toolTr.name,
  description: toolTr.description,
  applicationCategory: 'UtilityApplication',
  operatingSystem: 'Any',
  inLanguage: lang,
  offers: { '@type': 'Offer', price: '0', priceCurrency: 'USD' },
};
---

<ToolLayout
  title={title}
  toolName={toolTr.name}
  description={description}
  category="doc"
  jsonLd={jsonLd}
  lang={lang}
>
  <MarkdownEditor client:only="react" translations={uiStrings} />
</ToolLayout>
