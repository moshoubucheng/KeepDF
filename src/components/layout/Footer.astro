---
import type { Locale } from '../../i18n/locales';
import { t } from '../../i18n/utils';

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;
const year = new Date().getFullYear();
const translations = t(lang);
const copyrightText = translations.footer.copyright.replace('{year}', String(year));
---

<footer class="border-t border-edge bg-page py-8">
  <div class="mx-auto max-w-6xl px-4 text-center text-sm text-fg-muted">
    <p class="mb-2">
      {translations.privacy.footer}
    </p>
    <p>{copyrightText}</p>
    <p class="mt-2">
      Email: <a href="mailto:wufuxing@me.com" class="text-brand-600 hover:underline">wufuxing@me.com</a>
    </p>
  </div>
</footer>
