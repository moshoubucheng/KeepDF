---
import type { Locale } from '../../i18n/locales';
import { t } from '../../i18n/utils';

interface Props {
  class?: string;
  lang?: Locale;
}
const { class: className, lang = 'en' } = Astro.props;
const badgeText = t(lang).privacy.badge;
---

<div class:list={['inline-flex items-center gap-1.5 rounded-full bg-green-50 px-3 py-1 text-xs font-medium text-green-700 ring-1 ring-green-200 dark:bg-green-950 dark:text-green-300 dark:ring-green-800', className]}>
  <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
  </svg>
  {badgeText}
</div>
